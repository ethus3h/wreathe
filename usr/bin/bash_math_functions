#!/usr/bin/env bash
# based on https://voat.co/v/bash/comments/37335

# Absolute value
abs() {
    [[ $1 -lt 0 ]] && echo $(( -$1 )) || echo "$1"
}

# Greatest Common Divsior
gcd() {
    local a
    a="$(abs "$1")"
    local b
    b="$(abs "$2")"
    while [[ "$a" -ne "$b" ]]; do
        [[ "$a" -gt "$b" ]] && a=$(( a - b )) || b=$(( b - a ))
    done
    echo "$a"
}

# Lowest Common Multiple
lcm() {
    local g
    g="$(gcd "$1" "$2")"
    local p
    p=$(( 1 * 2 ))
    p="$(abs "$p")"
    echo $(( p / g ))
}
