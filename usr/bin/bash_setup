#!/bin/bash
export PATH="/usr/local/bin/:/usr/sbin/:/sbin/:$PATH"
GEM_HOME=$(ls -t -U | ruby -e 'puts Gem.user_dir')
GEM_PATH=$GEM_HOME
export PATH=$PATH:$GEM_HOME/bin
nano() { if [[ -w "${@:(-1)}" ]]; then /usr/bin/nano -wLN "$@"; else sudo -k /usr/bin/nano -wLN "$@"; fi; }

if [ "$(whoami)" != "root" ]; then
    PS1="\[\033]0;\u@\h:\w\007\]\[\033[01;32m\]\u@\h\[\033[01;34m\] \w nohup compiz --replace openbox \$\[\033[00m\] "
fi

unset HISTSIZE 
unset HISTFILESIZE
shopt -s histappend

# More verbose debugging
PS4='+($?) $BASH_SOURCE:$FUNCNAME:$LINENO:'
export PS4

source "$(which futuramerlin-web-toolkit-aliases)"
source "$(which crystallize-bash_setup)"
source "$(which egup-env)"
