#!/bin/bash
# Warn the user and wait a bit

time="$2"
if [ ! -n "$time" ]; then
    time="10"
fi

printf %b '\033[1;31m'

echo "### WARNING! ### WARNING! ### WARNING! ### WARNING! ### WARNING! ###"
echo "$1"
if [ "$time" -gt 0 ]; then
    echo "Continuing in $time seconds; press Ctrl+C to cancel."
fi
echo "### WARNING! ^^^ WARNING! ### WARNING! ### WARNING! ^^^ WARNING! ###"

printf %b '\033[0m'

sleep "$time"
